<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bottom_tab_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:clickable="false"
            android:gravity="center"
            android:text="会话"
            android:textColor="#DAA520"
            android:textSize="12sp" />

        <ImageView

            android:id="@+id/message_ico"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@id/message_text"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:src="@drawable/bottom_ico_message_pressed" />

        <ImageView
            android:id="@+id/message_ico_red"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_toRightOf="@+id/message_ico"
            android:visibility="gone"
            android:background="@drawable/design_red_point" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/friends"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/friends_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:clickable="false"
            android:gravity="center"
            android:text="好友"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/friends_ico"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@id/friends_text"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:src="@drawable/bottom_ico_friends_normal" />


    </RelativeLayout>


