<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="My">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="My.ImageView">
        <item name="android:contentDescription">@string/app_name</item>
    </style>
    <style name="My.ImageView.Photo_Avatar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="My.TextView._Black">
        <item name="android:textColor">@color/chat_base_color_text_black</item>
    </style>
    <style name="My.TextView">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="CustomAlertDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
