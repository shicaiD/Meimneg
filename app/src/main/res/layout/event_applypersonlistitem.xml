<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <com.example.com.meimeng.custom.CircleImageView
            android:id="@+id/imageview_round_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:border_color="#dab774"
            app:border_width="1dp"
            android:layout_centerVertical="true"
            android:src="@drawable/meimeng_ico_user_missing"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/nickname_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imageview_round_head"
            android:text=""
            android:layout_marginLeft="12dp"
            android:textColor="@color/gold_textcolor"
            android:textSize="15dp" />
        <ImageView
            android:id="@+id/invite_imageview"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/me_event_btn_invite_unclick"
            android:layout_marginRight="20dp" />


    </RelativeLayout>


</LinearLayout>
