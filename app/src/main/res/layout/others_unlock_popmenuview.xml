<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/me_set_password_pop_shape"
        android:id="@+id/others_password_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入解锁密码"
                android:textColor="@color/black_text_color"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/others_unlock_password_text_view_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:password="true"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="25sp"
                android:background="@drawable/auth_code_bg_2"
                android:maxLength="1"
                android:inputType="numberPassword"/>
            <EditText
                android:id="@+id/others_unlock_password_text_view_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:password="true"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="30sp"
                android:background="@drawable/auth_code_bg_2"
                android:maxLength="1"
                android:inputType="numberPassword"/>
            <EditText
                android:id="@+id/others_unlock_password_text_view_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:password="true"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="30sp"
                android:background="@drawable/auth_code_bg_2"
                android:maxLength="1"
                android:inputType="numberPassword"/>
            <EditText
                android:id="@+id/others_unlock_password_text_view_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:password="true"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="30sp"
                android:background="@drawable/auth_code_bg_2"
                android:maxLength="1"
                android:inputType="numberPassword"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>