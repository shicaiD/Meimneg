<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="37dp"
            android:paddingRight="37dp">

            <TextView
                android:id="@+id/lastname_text"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="姓"
                android:textColor="@color/text_dark"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/first_name_edit"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/lastname_text"
                android:background="#00000000"
                android:hint="请输入姓"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="@color/text_gray"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:background="#bf9f62" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="37dp"
            android:paddingRight="37dp">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="名"
                android:textColor="@color/text_dark"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/last_name_edit"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/name_text"
                android:background="#00000000"
                android:hint="请输入名"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="@color/text_gray"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:background="#bf9f62" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/person_height_layout"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="37dp"
            android:paddingRight="37dp">

            <TextView
                android:id="@+id/height_text"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="身高"
                android:textColor="@color/text_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/user_height"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/height_text"
                android:background="#00000000"
                android:hint="请选择身高"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="15dp" />

            <!--<ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/nav_back" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:background="#bf9f62" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="37dp"
            android:paddingRight="37dp">

            <TextView
                android:id="@+id/birthday_text"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="生日"
                android:textColor="@color/text_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/user_birthday"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/birthday_text"
                android:background="#00000000"
                android:hint="请选择生日"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="15dp" />

            <!--<ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/nav_back" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:background="#bf9f62" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="37dp"
            android:paddingRight="37dp">

            <TextView
                android:id="@+id/income_text"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="年收入"
                android:textColor="@color/text_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/user_income"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/income_text"
                android:background="#00000000"
                android:hint="请选择年收入"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="15dp" />

            <!--<ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/nav_back" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:background="#bf9f62" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="37dp"
            android:paddingRight="37dp">

            <TextView
                android:id="@+id/marry_text"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="婚姻状况"
                android:textColor="@color/text_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/user_marry"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/marry_text"
                android:background="#00000000"
                android:hint="请选择婚姻状况(可选填)"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="15dp" />

            <!--<ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/nav_back" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:background="#bf9f62" />

        </RelativeLayout>


    </LinearLayout>

    <include layout="@layout/select_layout"></include>
</RelativeLayout>
