<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    >
    <ImageView
        android:id="@+id/myevent_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        />
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/myevent_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="咖啡为伴 享受慢生活"
            android:textColor="@color/myevent_textcolor"
            android:textSize="@dimen/myevent_title_textsize"/>
        <TextView
            android:id="@+id/myevent_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myevent_title"
            android:layout_marginTop="12dp"
            android:text="广东-香草山咖啡馆"
            android:textColor="@color/myevent_textcolor"
            android:textSize="@dimen/myevent_default_textsize"
            />
        <TextView
            android:id="@+id/myevent_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myevent_place"
            android:layout_marginTop="10dp"
            android:text="2015.12.7"
            android:textColor="@color/myevent_textcolor"
            android:textSize="@dimen/myevent_default_textsize"
            />
        <TextView
            android:id="@+id/myevent_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myevent_date"
            android:layout_marginTop="4dp"
            android:text="订单编号：5590007494"
            android:textColor="@color/myevent_textcolor"
            android:textSize="@dimen/myevent_default_textsize"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/myevent_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            >
        <TextView
            android:id="@+id/pay_text"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:background="@color/myevent_btn_pressed_color"
            android:gravity="center"
            android:padding="5dp"
            android:text="已支付"
            android:textColor="@color/white"
            android:textSize="@dimen/myevent_btn_textsize"
            />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:src="@drawable/icon_activity_enter"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
