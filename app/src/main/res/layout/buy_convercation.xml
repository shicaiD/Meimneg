<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/dialog_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/buy_convercation_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="开通聊天通道"
                android:textColor="@color/text_dark"
                android:textSize="15sp" />


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/buy_convercation_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您今天还有"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/buy_convercation_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/buy_convercation_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次机会开通聊天通道"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp" />

            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buy_convercation_cancle"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/text_3_shape"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/buy_convercation_buy"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/text_4_shape"
                android:gravity="center"
                android:text="购买"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>