<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:text="上传身份证照片"
            android:textColor="@color/text"
            android:textSize="17dp"
            android:paddingLeft="37dp"
            android:paddingRight="37dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:lineSpacingExtra="5dp"
            android:text="请上传有效的身份证正面照，认证资料经过系统加密处理，以保证用户信息不被泄露，请放心上传。"
            android:textColor="#666666"
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginTop="31dp"
            android:paddingLeft="37dp"
            android:paddingRight="37dp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/upload_identify"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:visibility="visible">
                <com.example.com.meimeng.custom.RoundCornerImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="#CDCDCD"
                    android:scaleType="fitCenter" />
                <com.example.com.meimeng.custom.RoundCornerImageView
                    android:id="@+id/bg_example"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/upload_identify_layout"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/add_identity"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/upload_identify"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/bg_frist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/linearlayout_first"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.example.com.meimeng.custom.RoundCornerImageView
                        android:id="@+id/identify_upload_picture_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/identify_upload_image_view"
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            />
                        <TextView
                            android:id="@+id/describe_3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textColor="@color/white_text_color"
                            />
                    </LinearLayout>



                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
<!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="示例"
            android:paddingLeft="90dp"
            android:layout_gravity="left"
            />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="温馨提示"
            android:textColor="@color/text"
            android:textSize="17dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:lineSpacingExtra="5dp"
            android:text="美盟的每一位会员都会提交身份认证，以确保会员身份的真实性与安全性。"
            android:textColor="#666666"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/submit_first_info_text"
            android:layout_width="175dp"
            android:layout_height="41dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/explore_screen_btn_background"
            android:gravity="center"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="18dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
</LinearLayout>