<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_bac"
    android:orientation="vertical">

    <include layout="@layout/titlebar"></include>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/resetpsw_text"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="+86"
            android:textSize="15dp"
            android:textColor="@color/text_dark"/>
        <EditText
            android:id="@+id/register_resetpsw_tel"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_toRightOf="@+id/resetpsw_text"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_gray"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:background="#BF9F62" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:background="#00000000">
        <TextView
            android:id="@+id/resetpsw_text_2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textSize="15dp"
            android:textColor="@color/text_dark"/>

        <EditText
            android:id="@+id/register_resetpsw_codeEdit"
            android:layout_width="215dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:textColorHint="@color/text_gray"
            android:layout_toRightOf="@+id/resetpsw_text_2"
            android:hint="请输入验证码"
            android:singleLine="true"
            android:textColor="@color/text_dark"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:background="#BF9F62" />

        <TextView
            android:id="@+id/register_resetpsw_codeButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"

            android:layout_marginRight="3dp"
            android:gravity="center"
            android:background="@drawable/auth_code_bg_1"
            android:text="获取验证码"
            android:textColor="#bf9f62"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:background="#00000000">
        <TextView
            android:id="@+id/resetpsw_text_3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="密码"
            android:textSize="15dp"
            android:textColor="@color/text_dark"/>
        <EditText
            android:id="@+id/register_resetpsw_psw"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/resetpsw_text_3"
            android:background="#00000000"
            android:hint="请输入新密码"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:inputType="textPassword"
            android:textColor="@color/text_dark"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:background="#BF9F62" />
    </RelativeLayout>

