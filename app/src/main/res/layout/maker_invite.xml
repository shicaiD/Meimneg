<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/dialog_back">

    <ImageView
        android:id="@+id/maker_invite_x_image_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/x_ico" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/maker_invite_x_image_view"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/maker_invite_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红娘帮约"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/maker_invite_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还有"
                android:textColor="@color/text_dark"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/maker_num_times_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/text_dark"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/maker_invite_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次红娘帮约机会"
                android:textColor="@color/text_dark"
                android:textSize="13sp" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maker_sure_text"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:background="@drawable/text_4_shape"
                android:gravity="center"
                android:text="立即帮约"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/open_up_text"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/text_3_shape"
                android:gravity="center"
                android:text="开通私人红娘服务"
                android:textColor="@color/white_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/make_chance_text"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/text_3_shape"
                android:gravity="center"
                android:text="赚取机会"
                android:textColor="@color/white_text_color"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>