<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="32dp"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/me_header_grid_layout">
        <RelativeLayout
            android:layout_width="234dp"
            android:layout_height="234dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_rowSpan="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_photo"
                android:scaleType="fitXY"
                android:id="@+id/me_image_view_1"/>
            <include android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/me_auditing_layout"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginLeft="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_photo"
                android:scaleType="fitXY"
                android:id="@+id/me_image_view_2"/>
            <include android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/me_auditing_layout"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_photo"
                android:scaleType="fitXY"
                android:id="@+id/me_image_view_3"/>
            <include android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/me_auditing_layout"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_photo"
                android:scaleType="fitXY"
                android:id="@+id/me_image_view_4"/>
            <include android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/me_auditing_layout"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_photo"
                android:scaleType="fitXY"
                android:id="@+id/me_image_view_5"/>
            <include android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/me_auditing_layout"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp">
            <ImageView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@drawable/add_photo"
                android:scaleType="fitXY"
                android:id="@+id/me_image_view_6"/>
            <include android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/me_auditing_layout"/>
        </RelativeLayout>
    </GridLayout>
   <!-- <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_lock2"
        android:layout_alignBottom="@+id/me_header_grid_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"
        android:id="@+id/me_lock_image_view" />-->
    <LinearLayout
        android:id="@+id/line_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8E8E8"
        android:layout_alignBottom="@+id/me_header_grid_layout"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_below="@id/line_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
    <TextView
        android:id="@+id/me_header_save_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="#bf9f62"
        android:background="@drawable/buttonstyle_radius3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        />
    </LinearLayout>
</RelativeLayout>