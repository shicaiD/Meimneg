<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/dialog_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="提示"
            android:textColor="@color/text_dark"
            android:textSize="17sp"
           />

        <TextView
            android:id="@+id/reguster_tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="您的真实姓名，性别，出生日期一旦提交后则不能更改，请确认填写无误！"
            android:textColor="@color/text_dark"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_tips_cancel"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/text_3_shape"
                android:gravity="center"
                android:text="重新填写"
                android:textColor="@color/white_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/register_tips_sure"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/text_4_shape"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>