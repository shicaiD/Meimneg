<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/titlebar"></include>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingBottom="30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/describe_image_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="35dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_ico" />


                <TextView
                    android:id="@+id/describe_2_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:lineSpacingMultiplier="1.2"
                    android:text="身份认证后，提升可信度更多用户联系你哦"
                    android:textColor="#666666"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/describe_2_2_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:visibility="gone"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:visibility="invisible"
                        android:id="@+id/upload_identify_layout"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/frame"
                        android:gravity="center_horizontal"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        >
                        <com.example.com.meimeng.custom.RoundCornerImageView
                            android:id="@+id/bg_frist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            />
                        <LinearLayout
                            android:id="@+id/Linearlayout_first"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/identify_upload_image_view"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/upload_pic" />

                            <TextView
                                android:id="@+id/describe_3_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点击上传" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/is_show"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        >
                        <LinearLayout
                            android:id="@+id/upload_identify"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/rel_bg_example"
                                android:layout_width="142dp"
                                android:layout_height="142dp"
                                android:visibility="visible">
                                <com.example.com.meimeng.custom.RoundCornerImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:src="#CDCDCD"
                                    android:scaleType="fitCenter" />
                                <com.example.com.meimeng.custom.RoundCornerImageView
                                    android:id="@+id/bg_example"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitCenter" />
                                <TextView
                                    android:id="@+id/describe_3_text_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/tv_text_example"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/text_dark"
                                android:text="示例"/>
                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_identify_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >
                    <RelativeLayout
                        android:id="@+id/upload_house_identify_layout"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/frame"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <com.example.com.meimeng.custom.RoundCornerImageView
                            android:id="@+id/bg_second"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:id="@+id/Linearlayout_second"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/upload_house_image_view"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:src="@drawable/upload_pic" />

                            <TextView
                                android:id="@+id/describe_house_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点击上传" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/upload_car_identify_layout"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/frame"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <com.example.com.meimeng.custom.RoundCornerImageView
                            android:id="@+id/bg_third"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:id="@+id/Linearlayout_third"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/upload_car_image_view"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:src="@drawable/upload_pic" />

                            <TextView
                                android:id="@+id/describe_car_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点击上传" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/dialog_layout"></include>
</RelativeLayout>