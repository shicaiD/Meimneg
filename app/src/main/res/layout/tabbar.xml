<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/background_home"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/home_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:clickable="false"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/home_ico"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_above="@id/home_text"
            android:clickable="false"
            android:src="@drawable/ico_index_pressed" />
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/friends"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/friends_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:clickable="false"
            android:gravity="center"
            android:text="好友"
            android:textColor="@color/text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/friends_ico"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_above="@id/friends_text"
            android:clickable="false"
            android:src="@drawable/ico_friends_normal" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:clickable="false"
            android:text="消息"
            android:textColor="@color/text"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/message_text">

            <ImageView
                android:id="@+id/message_ico"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:clickable="false"
                android:src="@drawable/ico_message_normal" />

            <ImageView
                android:id="@+id/message_ico_red"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/design_red_point"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/me_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:clickable="false"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/me_ico"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_above="@id/me_text"
            android:clickable="false"
            android:src="@drawable/ico_my_normal" />


    </RelativeLayout>

</LinearLayout>
