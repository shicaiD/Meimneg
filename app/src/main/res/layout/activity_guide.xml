<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        />

   <LinearLayout
       android:padding="10dip"
       android:layout_height="50dp"
       android:layout_width="fill_parent"
       android:layout_alignBottom="@+id/guide_pager"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="30dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:gravity="center"
       android:orientation="horizontal">

       <ImageView
           android:id="@+id/guide_iv_1"
           android:layout_width="10dp"
           android:layout_height="10dp"
           android:background="@drawable/yuandian_f"/>
       <ImageView
           android:id="@+id/guide_iv_2"
           android:layout_width="10dp"
           android:layout_height="10dp"
           android:layout_marginLeft="10dp"
           android:background="@drawable/yuandian_fn"/>
       <ImageView
           android:id="@+id/guide_iv_3"
           android:layout_width="10dp"
           android:layout_height="10dp"
           android:layout_marginLeft="10dp"
           android:background="@drawable/yuandian_fn"/>
       <ImageView
           android:id="@+id/guide_iv_4"
           android:layout_width="10dp"
           android:layout_height="10dp"
           android:layout_marginLeft="10dp"
           android:background="@drawable/yuandian_fn"/>
   </LinearLayout>
</RelativeLayout>
