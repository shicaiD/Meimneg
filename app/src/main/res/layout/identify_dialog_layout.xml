<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:background="@drawable/dialog_back"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="温馨提示"
                android:textColor="#666666"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/message_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="你尚未进行身份认证，\n无法查看更多信息。"
                android:textColor="#666666"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>
        <LinearLayout
            android:id="@+id/prompt_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/dialog_back_s"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/simple_dialog_cancel_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:text="取消"
                android:textColor="@color/text"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#dddddd"
                />
            <TextView
                android:id="@+id/simple_dialog_sure_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:text="立即认证"
                android:textColor="@color/text"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>