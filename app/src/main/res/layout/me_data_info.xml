<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="284px"
                android:layout_height="100px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="姓"
                    android:layout_marginLeft="30px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:text="夏"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/me_first_name_textview"
                    android:layout_marginRight="40px"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#E8E8E8"
                android:layout_span="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="284px"
                android:layout_height="100px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="名"
                    android:layout_marginLeft="30px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:text="天"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/me_last_name_textview"
                    android:layout_marginRight="40px"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#E8E8E8"
                android:layout_span="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="284px"
                android:layout_height="100px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="性别"
                    android:layout_marginLeft="30px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:text="女"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/me_sex_textview"
                    android:layout_marginRight="40px"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#E8E8E8"
                android:layout_span="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="284px"
                android:layout_height="100px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="出生日期"
                    android:layout_marginLeft="30px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:text="1990-12-29"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/me_birthday_textview"
                    android:layout_marginRight="40px"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#E8E8E8"
                android:layout_span="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="284px"
                android:layout_height="100px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="生肖"
                    android:layout_marginLeft="30px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:text="马"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/me_chinese_zodiac_textview"
                    android:layout_marginRight="40px"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#E8E8E8"
                android:layout_span="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="284px"
                android:layout_height="100px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="星座"
                    android:layout_marginLeft="30px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:text="魔蝎"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/me_zodiac_textview"
                    android:layout_marginRight="40px"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#E8E8E8"
                android:layout_span="2"/>
        </TableRow>
    </TableLayout>
    <include layout="@layout/me_base_info"/>
    <include layout="@layout/me_work_info"/>
    <include layout="@layout/me_income_info"/>
    <include layout="@layout/me_interest_info"/>
    <include layout="@layout/me_story"/>
</LinearLayout>