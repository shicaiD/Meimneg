<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="268dp"
    android:background="@color/white"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:background="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/backgroundcolor"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/meimeng_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请选择礼物"
                android:textColor="@color/text"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/meimeng_money"
                android:textColor="#bf9f62"

                android:textSize="12sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black_text_color" />
        </RelativeLayout>


        <HorizontalScrollView
            android:id="@+id/others_self_horizontal_view"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/give_gift_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <GridView
                    android:id="@+id/give_gift_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@color/color_transparent"
                    android:listSelector="@color/color_transparent"
                    android:scrollbars="none"></GridView>
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center">
        <Button
            android:id="@+id/give_button"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/buttonstyle_radius2"
            android:focusable="true"
            android:text="确认赠送"
            android:textColor="#ffffff"
            android:textSize="16dp"
            />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>