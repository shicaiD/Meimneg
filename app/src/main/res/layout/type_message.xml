<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/message_service_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/service_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="服务消息"
                android:textColor="@color/black_text_color"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/service_unread_num_text"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"
                android:background="@drawable/design_red_point"
                android:layout_toRightOf="@id/service_text"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/service_line_image_view"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/black_text_color"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/message_chat_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="聊天消息"
                android:textColor="#666666"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/message_chat_pic"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/chat_text"
                android:background="#ffff0c0b"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/chat_line_image_view"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/black_text_color"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>