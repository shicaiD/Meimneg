<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_bac"
    >

    <include layout="@layout/titlebar"></include>

    <ImageView
        android:id="@+id/vip_pay_result_state_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/pay_failure_ico"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/vip_pay_result_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付失败"
        android:textSize="17sp"
        android:textColor="@color/text_gray"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/vip_pay_result_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@color/gold_textcolor"
        android:layout_gravity="center_horizontal"
        android:text="重新支付"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        />
</LinearLayout>