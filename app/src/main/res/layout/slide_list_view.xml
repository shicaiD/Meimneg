<?xml version="1.0" encoding="utf-8"?>
<com.example.com.meimeng.custom.slidelistview.SlideListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:id="@+id/slideListitem"
>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp">
            <!--聊天按钮-->
            <RelativeLayout
                android:id="@+id/slide_conversation_layout"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_chat"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slide_hold_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/slide_conversation_layout">
                <RelativeLayout
                    android:id="@+id/header_image_view_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">
                <com.example.com.meimeng.custom.RoundCornerImageView
                    android:id="@+id/slide_header_image_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/meimeng_ico_user_missing"
                    app:border_color="#dab774"
                    app:border_width="1dp" />
                    <ImageView
                        android:id="@+id/weikaitong"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_wkt"
                        android:visibility="gone"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/header_image_view_rl"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    >
                <TextView
                    android:id="@+id/slide_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="李静"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp" />

                    <TextView
                        android:id="@+id/slide_age_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21岁"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_gray"
                        android:textSize="14dp"/>
                    <TextView
                        android:id="@+id/slide_height_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="165cm"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_gray"
                        android:textSize="14dp"/>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/slide_address_view"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"

                    android:layout_toRightOf="@id/slide_name_text"
                    android:src="@drawable/icon_address" />

                <TextView
                    android:id="@+id/slide_place_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/slide_address_view"
                    android:text="成都市"
                    android:textColor="@color/text_gray"
                    android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/slide_layout"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="#f24040"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/slide_third_layout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/delete_ico" />
        </LinearLayout>
    </LinearLayout>
</com.example.com.meimeng.custom.slidelistview.SlideListItem>